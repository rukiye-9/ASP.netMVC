@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Sınıflar.SinifGrup2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->

    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{sirano++;} @sirano</td>
                        <td>@x.Departman</td>
                        <td>
                            @if (x.Sayi == 1)
                            {<div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (x.Sayi == 2)
                            {<div class="progress progress-xs">
                                    <div class="progress-bar progress-bar bg-warning" style="width: 65%"></div>
                                </div>
                            }

                            @if (x.Sayi == 3)
                            {<div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar progress-bar bg-info" style="width: 75%"></div>
                                </div>
                            }

                            @if (x.Sayi == 4)
                            {<div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar progress-bar bg-gradient-purple" style="width: 85%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (x.Sayi == 1)
                            {<div>
                                    <span class="badge bg-blue">@x.Sayi</span>
                                </div>
                            }
                            @if (x.Sayi == 2)
                            {<div>
                                    <span class="badge bg-warning">@x.Sayi</span>
                                </div>
                            }

                            @if (x.Sayi == 3)
                            {<div>
                                    <span class="badge bg-info">@x.Sayi</span>
                                </div>
                            }

                            @if (x.Sayi == 4)
                            {<div>
                                    <span class="badge bg-gradient-purple">@x.Sayi</span>
                                </div>
                            }
                        </td>

                    </tr>
                }



            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>