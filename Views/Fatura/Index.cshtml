@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>

        <th>Seri Sıra No</th>
        <th>Saat</th>
        <th>Fatura Tarih</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>

    </tr>
    @foreach (var k in Model)
    {
        <tr>

            <td>@k.FaturaSeriNo @k.FaturaSıraNo </td>
            <td>@k.Saat</td>
            <td>@k.FaturaTarih</td>
            <td>@k.Toplam ₺</td>

            <td>
                <a href="/Fatura/FaturaGetir/@k.FaturaID" class="btn btn-warning" style=" background-color:orange;color:white">Güncelle</a>
            </td>
            <td>
                <a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-success" style=" background-color:darkcyan">Detaylar</a>
            </td>
            
            <td>
                <a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-default" style=" background-color:yellowgreen">Kalem</a>
            </td>

        </tr>
    }
</table>
<a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura Girişi</a>
<br />
<br />
<button type="button" class=" btn btn-default" style="background-color:violet;color:white" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>
<div class="modal" id="Modal1">
    <div class=" modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">PupUp Diyalog ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    <tr>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.FaturaSeriNo</td>
                                <td>@x.FaturaSıraNo</td>
                                <td>@x.Toplam ₺</td>
                            </tr>
                        }
                    
                </table>
                <button type="=button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>