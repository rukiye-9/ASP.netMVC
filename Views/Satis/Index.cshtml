@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
        
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>

        </tr>
    </thead>
    @foreach (var k in Model)

    {
        <tr>
       
            <td> @k.Urun.UrunAd</td>
            <td> @k.Cariler.CariAd @k.Cariler.CariSoyad</td>
            <td> @k.Personel.PersonelAd @k.Personel.PersonelSoyad</td>
            <td> @k.Adet</td>
            <td> @k.Fiyat</td>
            <td> @k.ToplamTutar</td>
            <td> @k.Tarih</td>

            <td>
                <a href="/Satis/SatisGetir/@k.SatisID" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="/Satis/SatisDetay/@k.SatisID" class="btn btn-success" style=" background-color:darkcyan">Detaylar</a>
            </td>

        </tr>
    }
</table>

<a href="/Satis/YeniSatis" class="btn btn-info">Yeni Satış Ekle</a>




